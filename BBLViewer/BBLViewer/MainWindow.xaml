<Window x:Class="BBLViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Rectangle Fill="#FFE8E8F9" HorizontalAlignment="Left" Height="352" Margin="-2,-2,0,0" Stroke="Black" VerticalAlignment="Top" Width="527"/>

        <Button x:Name="btnConnect" Content="Button" HorizontalAlignment="Left" Height="26" Margin="218,157,0,0" VerticalAlignment="Top" Width="95" BorderBrush="#FF91E47F" ClipToBounds="True" Click="btnConnect_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFE8FFE2"/>
                    <GradientStop Color="#FFAAE89C" Offset="0.795"/>
                    <GradientStop Color="#FF8EDC7D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
